<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    tools:context="net.kechol.udacity.android.popularmovies.views.DetailActivityFragment"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:text="Movie Title"
        android:phoneNumber="false"
        android:id="@+id/detail_title"
        android:textColor="#ffffff"
        android:background="#108575"
        android:paddingLeft="16dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is overview."
        android:id="@+id/detail_overview"
        android:layout_below="@+id/detail_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp" />

    <ImageView
        android:layout_width="185dp"
        android:layout_height="278dp"
        android:id="@+id/detail_cover_image"
        android:layout_below="@+id/detail_overview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_margin="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="8.3 / 10"
        android:id="@+id/detail_popularity"
        android:layout_alignTop="@+id/detail_cover_image"
        android:layout_toRightOf="@+id/detail_cover_image"
        android:layout_toEndOf="@+id/detail_cover_image"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015"
        android:id="@+id/detail_release_date"
        android:layout_below="@+id/detail_popularity"
        android:layout_toRightOf="@+id/detail_cover_image"
        android:layout_toEndOf="@+id/detail_cover_image" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_list_videos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_list_reviews"
        android:layout_alignBottom="@+id/detail_list_videos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
